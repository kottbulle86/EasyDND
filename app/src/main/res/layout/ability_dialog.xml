<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/ability_title_text"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#FFFFBB33"
        android:textColor="#FFFFFFFF"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:textSize="30sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">
        <TextView
            android:id="@+id/ability_score_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_alignParentLeft="true"
            android:text="@string/score"
            android:textSize="40sp"
            />
        <Spinner
            android:id="@+id/spinner_ability_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:layout_toRightOf="@id/ability_score_title"
            />
        <TextView
            android:id="@+id/ability_mod_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingRight="16dp"
            android:layout_alignEnd="@id/ability_score_title"
            android:layout_below="@id/ability_score_title"
            android:text="@string/mod"
            android:textSize="30dp"/>
        <TextView
            android:id="@+id/ability_mod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ability_mod_title"
            android:layout_alignBottom="@id/ability_mod_title"
            android:textSize="30dp"
            android:textColor="#fff"/>
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Randomize your Roll!"
        android:id="@+id/button_roll_abilityscore"
        android:layout_gravity="end"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:background="#00FFFFFF"/>
</LinearLayout>